@model IRL.Dtos.UserDto

@using (Html.BeginForm("UpdateUserProcess", "Admin", FormMethod.Post, new { id = "frmUpdateUser" }))
{   
    @Html.HiddenFor(x => x.Id)

    <div class="row-fluid">
        <div class="span12">
            @Html.ValidationSummary(false)
        </div>
    </div>
    <div class="row-fluid">
        <div class="span6">
            AD Name
        </div>
        <div class="span6">
            @Html.TextBoxFor(x => x.ADName)
        </div>
    </div>   
    <div class="row-fluid">
        <div class="span6">
            Display Name
        </div>
        <div class="span6">
            @Html.TextBoxFor(x => x.DisplayName)
        </div>
    </div>   
    <div class="row-fluid">
        <div class="span6">
            <a id="btnUpdateUserFormSubmit" class="btn" href="#"><i class="icon-ok"></i> Envoyer</a>
        </div>
        <div class="span6">
            <a id="btnUpdateUserFormCancel" class="btn" href="#"><i class="icon-remove"></i> Annuler</a>
        </div>
    </div> 
}
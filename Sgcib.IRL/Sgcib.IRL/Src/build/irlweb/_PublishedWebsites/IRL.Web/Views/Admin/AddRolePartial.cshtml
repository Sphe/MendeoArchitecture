@model IRL.Dtos.RoleDto

@using (Html.BeginForm("AddRoleProcess", "Admin", FormMethod.Post, new { id = "frmAddRole" }))
{    
    <div class="row-fluid">
        <div class="span12">
            @Html.ValidationSummary(false)
        </div>
    </div>
    <div class="row-fluid">
        <div class="span6">
            Role Name
        </div>
        <div class="span6">
            @Html.TextBoxFor(x => x.Name)
        </div>
    </div>
    <div class="row-fluid">
        <div class="span6">
            <a id="btnAddRoleFormSubmit" class="btn" href="#"><i class="icon-ok"></i> Envoyer</a>
        </div>
        <div class="span6">
            <a id="btnAddRoleFormCancel" class="btn" href="#"><i class="icon-remove"></i> Annuler</a>
        </div>
    </div> 
}
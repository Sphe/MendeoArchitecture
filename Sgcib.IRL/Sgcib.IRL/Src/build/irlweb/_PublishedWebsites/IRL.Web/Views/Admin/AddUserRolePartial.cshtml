@model IRL.Dtos.UserRoleDto

@using (Html.BeginForm("AddUserRoleProcess", "Admin", FormMethod.Post, new { id = "frmAddUserRole" }))
{    
    <div class="row-fluid">
        <div class="span12">
            @Html.ValidationSummary(false)
        </div>
    </div>
    <div class="row-fluid">
        <div class="span6">
            User
        </div>
        <div class="span6">
            @Html.DropDownListFor(x => x.UserId, Model.UserList.Select(x => new SelectListItem() { Text = x.ADName, Value = x.Id.ToString() }))
        </div>
    </div>   
    <div class="row-fluid">
        <div class="span6">
            Role
        </div>
        <div class="span6">
            @Html.DropDownListFor(x => x.RoleId, Model.RoleList.Select(x => new SelectListItem() { Text = x.Name, Value = x.Id.ToString() }))
        </div>
    </div>
    <div class="row-fluid">
        <div class="span6">
            <a id="btnAddUserRoleFormSubmit" class="btn" href="#"><i class="icon-ok"></i> Envoyer</a>
        </div>
        <div class="span6">
            <a id="btnAddUserRoleFormCancel" class="btn" href="#"><i class="icon-remove"></i> Annuler</a>
        </div>
    </div> 
}
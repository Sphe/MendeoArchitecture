@model IRL.Dtos.UserDto

@using (Html.BeginForm("AddUserProcess", "Admin", FormMethod.Post, new { id = "frmAddUser" }))
{    
    <div class="row-fluid">
        <div class="span12">
            @Html.ValidationSummary(false)
        </div>
    </div>
    <div class="row-fluid">
        <div class="span6">
            AD Name
        </div>
        <div class="span6">
            @Html.TextBoxFor(x => x.ADName)
        </div>
    </div>   
    <div class="row-fluid">
        <div class="span6">
            Display Name
        </div>
        <div class="span6">
            @Html.TextBoxFor(x => x.DisplayName)
        </div>
    </div>
    <div class="row-fluid">
        <div class="span6">
            <a id="btnAddUserFormSubmit" class="btn" href="#"><i class="icon-ok"></i> Envoyer</a>
        </div>
        <div class="span6">
            <a id="btnAddUserFormCancel" class="btn" href="#"><i class="icon-remove"></i> Annuler</a>
        </div>
    </div> 
}
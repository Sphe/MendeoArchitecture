@model IRL.Dtos.RoleDto

@using (Html.BeginForm("UpdateRoleProcess", "Admin", FormMethod.Post, new { id = "frmUpdateRole" }))
{   
    @Html.HiddenFor(x => x.Id)

    <div class="row-fluid">
        <div class="span12">
            @Html.ValidationSummary(false)
        </div>
    </div>
    <div class="row-fluid">
        <div class="span6">
            Role Name
        </div>
        <div class="span6">
            @Html.TextBoxFor(x => x.Name)
        </div>
    </div> 
    <div class="row-fluid">
        <div class="span6">
            <a id="btnUpdateRoleFormSubmit" class="btn" href="#"><i class="icon-ok"></i> Envoyer</a>
        </div>
        <div class="span6">
            <a id="btnUpdateRoleFormCancel" class="btn" href="#"><i class="icon-remove"></i> Annuler</a>
        </div>
    </div> 
}